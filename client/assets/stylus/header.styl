
.overlay
  width 100%
  height 100%
  position absolute
  background-color rgba(0,0,0,0.6)
  z-index 20
  /* added by Zensar
  display none */
// header
.o-header
  .o-typeahead
    display none
    background-color #fff
    position absolute
    box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.15)
    border-radius 4px
    margin 3px 0 0 0
    width calc(100% - 30px)
    z-index 10
    .results
      background-color #f8f8f8
      border-right 1px solid #ededed

      &:first-of-type
        border-bottom 1px solid #ededed

    .m-search-suggestion-product
      box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.15)
      a
        text-decoration none

    .m-header-search-bar-mobile
      width 100%
      button
        background-color #fff
        border 0
        &:focus
          outline none
      input
        background-color #fff
        border 0
        &:focus
          outline none
          box-shadow none
.m-megamenu
  background-color $white
  .o-nav-desktop-menu
    a
      display block
      text-decoration none
    .m-desktop-menu-list
      list-style-type none
      padding 0
      margin 0
      li
        display inline-block
        padding 9px 0

    .m-megamenu__dropdown
      background-color #f8f8f8
      margin 0
      padding 15px
      border 0
      border-radius 0
      min-width 15rem
      top 38px!important
    	box-shadow 0 5px 5px -3px rgba(0, 0, 0, 0.2), 0 3px 14px 2px rgba(0, 0, 0, 0.12)
      &:after
        bottom 100%
        left 46.5%
        border solid transparent
        content ""
        height 0
        width 0
        position absolute
        pointer-events none
        border-color rgba(255,255,255,0)
        border-bottom-color #f8f8f8
        border-width 7px
        margin-left -7px
      li
        display block
        padding 0 10px
      .m-desktop-subcategory-list
        list-style-type none
        padding 13px 0 0 0
      .popover
        display none
        border-radius 0
        box-shadow 0 5px 5px -3px rgba(0, 0, 0, 0.2), 0 3px 14px 2px rgba(0, 0, 0, 0.12)
        max-width none
        height auto!important



.a-header__strongLink
	font-family 'robotoregular'
	font-size $body2
	color #3b3b3b
	padding 0

.a-header__topLink
	font-family $regular
	color $a-topLink-color !important
	text-decoration none
	font-size 0.875em
	line-height 36px


.a-header__topLink
	i
		font-size 11px
		padding 0 0 0 10px


@media (max-width: 992px)
  .o-header
    .o-typeahead
      background-color #fff
      position fixed
      box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.15)
      border-radius 4px
      margin 3px 0 0 0
      width calc(100% - 30px)
      z-index 10
      border-radius 0
      width 100%
      height 100%
      top -3px
      left 0
      overflow-y scroll

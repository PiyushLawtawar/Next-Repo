/*Modal dark backdrop fade-in*/
.modal-backdrop.show {
  overflow: hidden;
  -webkit-animation: mod-fadeIn 0.1s forwards;
	        animation: mod-fadeIn 0.1s forwards;
}
@media only screen and (max-width: 769px) {
    .modal-backdrop.show {
     background-color: #000;
     -webkit-animation: none;
	        animation: none;
    }
}
@-webkit-keyframes mod-fadeIn {
  0% { opacity: 0; }
  20% { opacity: 0; }
  40% { opacity: 0.3; }
  60% { opacity: 0.3; }
  80% { opacity: 0.4; }
  100% { opacity: 0.5; }
}
@keyframes mod-fadeIn {
  0% { opacity: 0; }
  20% { opacity: 0; }
  40% { opacity: 0.3; }
  60% { opacity: 0.3; }
  80% { opacity: 0.4; }
  100% { opacity: 0.5; }
}

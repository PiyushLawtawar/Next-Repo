.loading {
	position: fixed;
	z-index: 10052;
	height: 100%;
	width: 100%;
	background: #fff;
	opacity: 0.8;
}

.loader-wrapper {
  position: relative;
  top: 35%;
  box-sizing: border-box;
  display: 'flex';
  justify-content: 'center';
  align-content: 'center';
  align-items: 'flex-start';
}

.page-container-bg-solid {
  background: #eff3f8;
}

.loader {
    height: 148px;
    width: 148px;
    border: 4px solid transparent;
    border-radius: 50%;
    margin: 0 auto;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 9999;
}

.mainLoader {
    position: absolute;
    left: 50%;
    margin-left: -30px;
    top: 50%;
    margin-top: -30px;
    width: 60px;
}

@media only screen and (min-width: 992px) {
     .mainLoader {
          width: 80px;
          margin-left: -40px;
          margin-top: -40px;
     }
}

.react-date-picker
    display inline-flex
    position relative

.react-date-picker,
.react-date-picker *,
.react-date-picker *:before,
.react-date-picker *:after
    -moz-box-sizing border-box
    -webkit-box-sizing border-box
    box-sizing border-box
    display block

.react-date-picker--disabled
    background-color #f0f0f0
    color #6d6d6d

.react-date-picker__wrapper
    display flex
    border thin solid #e6e6e6
    border-radius 4px

/* added for error scenario Start */

.react-date-picker__wrapper_invalid
     border thin solid #f00

/* added for error scenario End */

.react-date-picker__inputGroup
    min-width calc((24px * 3) +  0.54em * 8  +  0.217em * 2)
    flex-grow 1
    display flex
    flex-wrap nowrap
    flex-direction row
    padding 0px 15px
    align-items baseline
    box-sizing content-box
    height 34px
.react-date-picker__inputGroup__input:invalid {
    width: 25px!important;
    padding-left: 8px;
}
.react-date-picker__inputGroup__divider {
    padding: 1px 6px!important;
}
.react-date-picker__inputGroup__divider
    padding 1px 8px

.react-date-picker__inputGroup__input
    min-width 0.54em
    height 100%
    position relative
    padding 0 1px
    border 0
    background none
    font inherit
    box-sizing content-box
    -moz-appearance textfield
    &:invalid
        background rgba(255, 0, 0, 0.1)

.react-date-picker__inputGroup__input::-webkit-outer-spin-button,
.react-date-picker__inputGroup__input::-webkit-inner-spin-button
    -webkit-appearance none
    margin 0

.react-date-picker__inputGroup__input--hasLeadingZero
    margin-left -0.54em
    padding-left calc(1px +  0.54em)

.react-date-picker__button
    border 0
    background transparent
    padding 4px 6px
    &:enabled
        cursor pointer
    &:disabled
        svg
            g
                stroke #6d6d6d
    svg
        display none

.react-date-picker__button:enabled:hover svg g,
.react-date-picker__button:enabled:focus svg g
    stroke #0078d7

.react-date-picker__calendar
    width 350px
    max-width 100vw
    position absolute
    top 100%
    left 0
    z-index 1
    .react-calendar
        border-width thin

.react-date-picker__calendar--closed
    display none
.react-calendar {
    width: 357px!important;
    max-width: 100%;
    background: #fff;
    border: 1px solid #a0a096;
    font-family: Arial, Helvetica, sans-serif;
    line-height: 1.125em;
    z-index: 99999999999;
    position: absolute;
    overflow: hidden;
}



.react-date-picker
	width 100%
	.react-date-picker__wrapper
		width 100%
		border-radius 4px
		height 36px
		border-color #e6e6e6
.react-datepicker__input-container
	position relative
	.a-calendar__icon
		position absolute
		top 10px
		right 8px
	.a-calendar__required
		z-index 0
		position absolute
		top 8px
		color $red
		left 151px
	.a-calendar__input
		width 100%
		border-radius 5px
		padding 0 0 0 16px
		height 36px
		border 1px solid rgba(0,0,0,.12)
		&:hover
			border 1px solid #000
		&:focus
			border 2px solid $primary-color
			outline $primary-color
	input::placeholder

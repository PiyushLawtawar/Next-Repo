.m-typeahead
  background-color #fff
  position absolute
  box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.15)
  border-radius 4px
  margin 3px 0 0 0
  width calc(100% - 30px)
  z-index 10
  .m-figureCard__figure.card.m-card
		  padding: 8px 16px 8px 16px
  .results
    background-color #f8f8f8
    border-right 1px solid #ededed

    &:first-of-type
      border-bottom 1px solid #ededed
      border-top-left-radius 4px
      border-bottom-left-radius 4px
  .m-search-suggestion-product
    box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.15)
    a
      text-decoration none


.a-header__typeaheadLink
	padding 15px 0
	display block
	text-decoration none
	font-size 0.875em
	font-family 'robotoregular'
	color #000

.m-header__searchLinkResult
	.a-header__typeaheadLink
		&:first-child
			border-bottom 1px solid rgba(0,0,0,.1)


.a-header__typeaheadLink
	span
		font-family 'robotobold'
		color $primary-color

.m-search-suggestion-product p{
    text-align:left;
}


.a-typeahead-title{
    text-align:left
}

@media (max-width: 991px)
	.m-typeahead
		background-color #fff
		position fixed
		box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.15)
		border-radius 4px
		margin 3px 0 0 0
		width calc(100% - 30px)
		z-index 10
		border-radius 0
		width 100%
		height 100%
		top -3px
		left 0
		overflow-y scroll
		.col-lg-6
			font-size 0
			height auto
      
@media (max-width: 1300px)
	.m-typeahead
		.col-lg-6
			max-width 50%
			flex 0 0 50%
@media (min-width: 1301px)
	.m-typeahead
		.col-lg-6
			max-width 25%
			flex 0 0 25%






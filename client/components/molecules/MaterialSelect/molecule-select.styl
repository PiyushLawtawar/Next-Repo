	top 7px
	font: $body2
.mdc-select.mdc-select--outlined .mdc-floating-label.mdc-floating-label--float-above
	top 14px
.mdc-select--invalid:not(.mdc-select--disabled).mdc-select--focused .mdc-floating-label
	color $red

.mdc-select
	.a-icon__opticHelp

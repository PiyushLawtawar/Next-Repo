.t-airTimeRecharge
    .o-box
        min-width: auto
.a-airTime-title
    font: 1.25rem 'robotoRegular'
    margin-bottom: 34px
.a-airTime-sub__title
    font: 1.125rem 'robotoMedium'
    padding: 15px 12px
    margin 0px
.m-airTime-buttons
    button
        white-space: nowrap
        width: auto
    .a-btn--tertiary
        margin: 0px 12px 24px
.m-checkCellphone-data__item
    border-bottom: solid 1px $gray-lighter
    margin-bottom: 16px
    .dropdown-menu
        width: 245px
        //left 10px
    &.border-none
        border-bottom: none
    .icon-more_vert:before
        font-size: 1.500rem
    .a-checkCellphone-data
        font $body2
        margin-bottom 4px
        color $carbon
        &--cellphone__number
            font $body1
            margin-bottom 4px
        &--company
            font $body3
            margin-bottom 11px
    .m-checkbox__button.mdc-form-field
        display: flex
        align-items: start
        .m-checkbox.mdc-checkbox
            position: relative
            top: -8px
    .mdc-notched-outline__notch
            width: 110.75px !important
.a-airTime-addPhone--mobile
    position relative
    font $body2-title
    color $carbon
    text-decoration: none
    padding-bottom: 15px
    padding-left: 15px
    &:visited
        color: $carbon
        text-decoration: none
    .icon-arrow_right
        position absolute
        right 8px
#AirTime-removeCellphone
    .modal-dialog.modal-sm.modal-dialog-centered.modal-small
        align-items: center
    .modal-header
        position relative
    .modal-content
        height auto
        border-radius: 4px
    .modal-body
        margin-top: 0px
        font: $body2

@media only screen and (max-width: 992px)
    #o-box-airTime__cellphones, #o-box-payment
        .col-12.d-lg-none
            padding-top: 14px
            border-top: solid 1px $gray-lighter
            margin-bottom: 24px;
    .t-airTimeRecharge
        .o-box
            box-shadow: $b-shadow-card
    .a-airTime-sub__title
        font $title7
    .a-airTime-title--mobile
        background: $white
        box-shadow: $b-shadow-card
        margin-bottom: 24px
        .a-airTime-title
            margin-bottom: 0px
            padding: 10px 0px


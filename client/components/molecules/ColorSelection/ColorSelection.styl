

.m-offerList-colorSelection
    margin: 0px
    position relative
    &.a-plp-color .a-product__color
        border: 1px solid #d8d8d8
        height: 24px
        width: 24px
        min-height: 24px
        min-width 24px
        margin: 2px
    &.a-plp-color .a-product__color span
        border-radius: 50%
        display: block
        height: 20px
        width: 20px
        min-height: 20px
        min-width 20px
    .a-plus__icon
        border-radius 0px
        box-shadow none
        position: absolute
        right: 0
        top: 28px
        .icon-sum
            font $title7
            color $gray
    .m-colorSlection-scroll
        overflow-x: hidden
        width: auto
        margin: 0px
        ul
            display: inline-flex
    #btnMoreColors
        background: $white
        border: none
        cursor pointer
        &:focus
            outline: none
    .a-product__color.active
        box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.5), 0 0 4px 0 rgba(0, 0, 0, 0.5);



#modal-filters
  width 100%
  .btn-link
    color $carbon
    display block
    font-size 0.875rem
    padding 0 .75rem
    text-align left
    &:hover
      text-decoration none
    i
      color $lead
      font-size .75em
      position absolute
      right 25px
      top 21px
  .btn-link[aria-expanded="true"] i:before
    content "\e905"
  .card-header
    background-color #fff 
  .a-filter-selection
    color $gray-light
    font-size 0.75em
    margin-left 13px
  .filter-applied
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
    width 210px
  .a-productColor__item.a-filterColor__modal
    height 20px
    width 20px
    position relative
    border: none
    span
      position absolute
      top 0.5px
      border-radius: 100px
      display: flex
      height: 17px
      width: 17px
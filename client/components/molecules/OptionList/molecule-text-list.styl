.m-myBagHeadersName, .m-myBagHeadersName__list
  width 100%
  display flex
  height auto
  width 100%
  padding 0
  margin 0
  flex-flow row wrap
.m-myBagHeadersName
  margin-bottom 10px
.m-myBagHeadersName__list
  list-style-type none
  border-bottom 1px solid $timberwolf
  margin 0 16px

.m-myBagHeadersName__items
  width 206px
  padding 5px 0
  color $carbon

.m-myBagHeadersName__items--triple
  flex-grow 3
  // text-align center
  padding-left 246px

.m-myBagHeadersName__items--saved
  width 50%
  padding-left 226px

.m-product{
  margin-left: 119px;
}
  

// Mobile / Tablet portrait
@media (min-width: 320px) and (max-width: 991px){
  .m-myBagHeadersName{ 
    display: none;
    // width: 0;
    // height: 0;
    border: 1px solid red;
  }
  .m-product{
    max-width: 164px;
  }
}

// Tablet
@media (min-width: 992px) and (max-width: 1279px) {
  .m-myBagHeadersName__list{
    margin: 0;
    border-bottom: 2px solid $timberwolf;
  }
  .m-product{
    margin-left: 0;
    max-width: 100px;
  }
  .m-myBagHeadersName__items{
    width: 167px;
  }
}

// Desktop
@media (min-width: 1280px) {
  .m-product{
    margin-left: 0;
    max-width: 100px;
  }
  .m-myBagHeadersName__items--triple{
    padding-left: 166px;
  }
}


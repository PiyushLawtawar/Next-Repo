.o-stickyBar__container
	background $white
	box-shadow 0 4px 7px 0 rgba(204, 204, 204, 0.5)
	display none
	height 102px
	padding-bottom 12px
	padding-top 8px
	position fixed
	top 0
	z-index 100
	width 100%
	&.hide
		display none
		transition all 0.5s ease
	&.show
		display block
		height auto //defect 22065 fixes
	.m-stickyBar__image
		margin 0 auto
		width 80%
		.m-figure
			margin 0
		.a-stickyBar__image
			object-fit cover
			object-position center
			max-height 67px
			width 100%
		&.-selected
			border 1px solid $timberwolf

@media only screen and (max-width: 991px)
	.o-stickyBar__container
		display none !important

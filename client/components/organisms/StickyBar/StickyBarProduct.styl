.o-stickyBar__product
    max-height: 100%
    overflow: hidden

.o-stickyBar__product__general
    width: 100%
    height: 100%

    display: grid;
    grid-template-columns: 30% 70%;
    grid-template-rows: 40% 60%;
    overflow: hidden
    max-height: 71px

    .o-stickyBar__product__image
        grid-area: 1 / 1 / 3 / 2;
        overflow: hidden
        figure
            width: 100%
            max-height: 100%
            margin: 0
            img 
                width: 100%
    .o-stickyBar__product__title
            padding: 2px 10px;
            display: flex;
            align-items: center;
            overflow: hidden;
            position relative
            width: 100%
            display: -webkit-box;
            -webkit-line-clamp: 1;
            -webkit-box-orient: vertical;
            h5
                font: $body1-description
                color: $lead
                margin: 0
                align-self: center
                overflow hidden
                text-overflow ellipsis
                white-space nowrap
                width 100%
                -webkit-box-orient: vertical;


    .o-stickyBar__product__price
        grid-area: 2 / 2 / 3 / 3;
        display: flex
        justify-content: center
        padding: 0 10px
        .m-product__price
            width: 100%
            padding: 0
            display: flex;
            align-items: center;
            white-space: nowrap
            .row
                width: 100%
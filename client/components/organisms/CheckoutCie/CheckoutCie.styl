.o-cieInfo
  background-color $white
  box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.15)
  border-radius 4px
  padding 16px
  margin-bottom 8px

@media (min-width: 991px)
  .o-cieInfo
    padding 24px 24px 10px 24px
    margin-bottom 24px

@media (min-width: 1199px)
  .o-cieInfo
    padding 24px 24px 16px 24px
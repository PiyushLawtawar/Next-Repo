.o-paypalInfo
  background-color $white
  box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.15)
  border-radius 4px
  padding 28px 14px
 

.a-paypalInfo__heading
  font $body2-title
  text-align center

.a-paypalInfo__logo
  width 150px
  height 38px
  margin 44px auto 44px auto

.a-paypalInfo__description
  font $caption
  color $carbon
  margin-bottom 4px

@media (min-width: 991px)
  .o-paypalInfo
    padding 32px 24px

  .a-paypalInfo__heading
    text-align left

  .a-paypalInfo__logo
    width 182px
    height 46px
    margin 22px 0 30px 0

  .a-paypalInfo__description
    font $body2 
    margin-bottom 0

@media (min-width: 1199px)
  .a-paypalInfo__logo
    margin 31px 0 30px 0
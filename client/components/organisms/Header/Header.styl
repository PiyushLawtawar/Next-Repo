.m-arrow_box:after, .m-arrow_box:before {
	bottom: 100%;
	left: 87%;
	border: solid transparent;
	content: " ";
	height: 0;
	width: 0;
	position: absolute;
	pointer-events: none;
}

.m-arrow_box:after {
	border-color: rgba(136,183,213,0);
		border-bottom-color: #f8f9fa;
		border-width: 7px;
		margin-left: -16px;
}
.m-arrow_box:before {
			border-color: rgba(239,245,54,0);
		border-bottom-color: #343a4047;
		border-width: 8px;
		margin-left: -17px;
}

.arrow-pos:before, .arrow-pos:after
	left: 76%

.m-megamenu__category:hover .m-desktop__submenu .a-desktop__img {
		animation-name: floating, fadeIn;
		animation-duration: 1s;
		margin-right: 0;
}

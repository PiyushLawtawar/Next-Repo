	max-height 64px
.m-searchBar
	& > div
		//min-height 63px
		//padding-top: 14px!important

.a-checkoutSteps__bar
	height 3px
	background $white
.m-modal
	.modal-content
		height auto!important
.m-box
	background-color $white
	box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.15)
	border-radius 4px
	padding 10px 25px
.m-checkoutSteps
	display block
	label
		margin .5rem 0
	&:hover
		color $white
.m-checkoutHelp
	display flex
	align-items flex-end
	justify-content center
	flex-direction column
	i
		padding-right 4px
	&:hover
		color $white
.m-menuBack
	color $a-topLink-color
	position absolute
	top 11px
	&:hover
		color $a-topLink-color
.m-box__accordionHeading
	display flex
	width 100%
	color inherit
	justify-content space-between
	flex-direction row
	align-items center
.m-box__containershipToAddress
	display flex
	justify-content space-between
	align-items center
.a-checkout__fail
	font-size 88px
	color $red
.a-box__radioWarningAlert
	color $tangerine
	font $caption
.a-box__radioSuccessAlert
	color $lime-green
	font $caption
.m-checkoutSteps
	height 3px
.icon-arrow_down
	transition transform .3s ease-in-out
.rotate-180
	transform rotate(180deg)
	transition transform .3s ease-in-out
.-failPayment
	color $red
.-headingMargin
	margin 30px 0
.-progressColor
	background-color $checkoutProgressColor
.-disabled
	opacity 0.7
	font $body2-others
.-bgWhite
	background-color transparent
.-ml-45
	margin-left 45px
.-btnCheckout
	height 36px
	font-size 0.875rem
.-stores
	max-height 500px
	overflow-y scroll
	padding-right 1rem
	width 100%
	display none
.-previewList
	max-height 500px
	overflow hidden
//  overflow-y scroll
.-pl-associatedPurchase
	padding-left 45px
.bs-popover-top
	border 0
.noSearchBar
	.m-menuBack
		position relative
		top 0
.-primaryColor
	color $primary-color
.-white
	background-color $white
.-digital
	color $lime-green
.-small
	font-size x-small
.-bold
	font-weight bold
.-driveThru
	color $primary-color
.-alertCheckout
	top 94px
.-boxUnshatter
	background-color transparent
	box-shadow none
.-pendingDelivery
	color $tangerine
.-underline
	text-decoration underline
.-static
	position static
	display block
	top unset
	width 100%
	margin 0 0 10px 0!important
	.mdc-snackbar__surface
		max-width 100%
		width 100%
	p
		margin 0

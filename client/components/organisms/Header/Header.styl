	.-resumeTitle
		font $body1
	.-bgWhite
		background-color $white
	.-progressColor
		background-color $primary-color
		height 3px
	.-headingMargin
		margin 20px 0
	.-ml-45
		margin-left 0
	.-btnCheckout
		border 0
		text-align left
		border-top 1px solid #f2f2f2
		padding 15px 0 0 0

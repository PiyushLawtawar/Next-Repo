.o-product__collectionDescription
    width: 100%
    min-height: 100px;
    height: auto;
    position relative

    display: grid
    grid-template-columns: 2fr 3fr 2px 3fr
    grid-template-rows: 1fr

    &.unavailable

        & > div:not(.unavailable__product)
            opacity: 0.2


    .o-product__collectionDescription__image
        height: 100%
        overflow hidden
        padding: 1em 0

        .m-product__selection
            width: 30px;
            height: 30px;
            background: $primary-color;
            border-radius: 50%;
            position: absolute;
            top: 1em;
            left: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            opacity: 0;

            &.selected
                animation-name: bounceIn;
                animation-duration: 300ms;
                animation-timing-function: linear;
                animation-fill-mode: forwards;
                opacity: 1;

            i.icon-done
                color: $white
                font-size: .75rem


    .o-product__collectionDescription__detail
		    padding: 1em;
		    .m-product__size ul
		    	display block
		    .m-product__sizeShow
            	display none

    .o-product__collectionDescription__separator
        margin: 1em 0
        background: $white-smoke
    .o-product__collectionDescription__purchase
        padding: 1em 3em

    & > div.unavailable__product
        position: absolute;
        width: 100%;
        height: 100%;
        z-index: 2;
        display: flex;
        justify-content: center;
        align-items: center;

        p
            font-size: 1.25em;
            color: $carbon

@media only screen and (max-width: 991px)
    article.o-product__collectionDescription
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: auto auto;
        &.product-selected
            // Styles for product icon done
            .o-product__collectionDescription__image
                .m-product__selection
                    display: flex
            // Styles for product deletion
            .o-product__collectionDescription__purchase
                .o-product__selection
                    display: none
                .o-product__selected
                    display: block


        & > div.unavailable__product
            position: absolute;
            width: 100%;
            height: 100%;
            z-index: 2;
            display: flex;
            justify-content: center;
            align-items: center;

            p
                font-size: .85em;
                color: $carbon
                text-align: center;

        .o-product__collectionDescription__purchase
            grid-area: 2 / 1 / 3 / 3;
            padding: 0
            margin-bottom: 28px
            .o-product__selection
                display: block
            .o-product__selected
                display: none
            .o-product__selected__details
                height: 50px;
                border-top: 1px solid $white-smoke;
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: .5rem
            .m-product__selected__details__color
                width: 50%
                height: 100%
                display: flex
                align-items: center
                justify-content: center
                border-right: 1px solid $white-smoke
                .m-product__selected__color__selected
                    width: 24px
                    height 24px
                    background: $white
                    border: 1px solid $carbon
                    border-radius: 50%
                    position relative
                    display: flex
                    justify-content: center
                    align-items: center
                    margin-right: 1rem
                    .color
                        position absolute
                        width: 20px
                        height: 20px
                        border-radius: 50%
                        &.red
                            background: $red
                p
                    margin: 0
            .m-product__selected__details__quantity
                width: 50%
                display: flex
                align-items: center
                justify-content: center
                height 100%
                label
                    margin: 0

        .o-product__collectionDescription__image

            .m-product__selection
                display: none
                width: 25px;
                height: 25px;

                i.icon-done
                    color: $white
                    font-size: .625rem

        .o-product__collectionDescription__detail
            .m-product__colors
                display: none
            .m-product__size
                display: none

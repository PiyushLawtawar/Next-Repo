.o-cards-row
    margin-bottom: 16px
    padding-top: 6px
    a
        color: $carbon
        &:hover
            text-decoration: none
        .m-card
            display: inline-block

.o-clp-cards-row
    display: flex
    flex-wrap: wrap
    @media screen and (max-width: 991.5px)
        padding: 0 8px
    a
        color: $carbon
        &:hover
            text-decoration: none
        .m-card
            margin-bottom: 16px
            display: inline-block

.o-clp-cards-row_container
    margin: 0 8px 16px
    width: calc(100% * (1/3) - 16px)
    div:nth-child(1)
        height 100%
        .m-figureCard__figure
            height 100%
            a
                height: 100%;
                display: flex;
                flex-direction: column;
                figcaption
                    justify-content: flex-end

    @media screen and (max-width: 991.5px)
        width: calc(100% * (1 / 2) - 16px)

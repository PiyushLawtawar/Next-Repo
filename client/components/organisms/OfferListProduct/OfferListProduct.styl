
.o-offerList-product
    background #fff
    border-radius 4px
    box-shadow $b-shadow-card
    padding 16px 16px 21px
    .m-product__productColor ul
        overflow: unset
    .m-offerList-label__opotions
        font $overline-module
    figure
        width 100%
        margin 0
        img
            width 75%
.a-offerList-anchor
    font $caption
    color $black
    i
        margin-right: 9px
        font-size: 0.6rem

@media only screen and (max-width:992px)
    .o-offerList-product
        figure
            img
                width 100%
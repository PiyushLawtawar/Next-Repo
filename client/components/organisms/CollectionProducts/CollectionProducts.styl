.o-collection__products
    margin-bottom: 2rem;

    .m-collection__products__addItems
        display: grid
        grid-template-columns: 2fr 3fr 2px 3fr
        grid-template-rows: 1fr

        .m-add-to-cart
            min-height: 44px;
            padding: 0 3em;


@media only screen and (max-width: 991px)
    .o-collection__products
        margin-bottom: 2rem;

        .m-collection__products__addItems
            display: none

            .a-add-to-cart
                min-height: 44px;
                padding: 0 3em;
